  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "if-env": "^1.0.4",
    "mongodb": "^3.6.1",
    "mongoose": "^5.9.24",
    "react-router-dom": "^5.2.0"
  }
}
